<div class="modal" id="search-info" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Search for a Movie</h5>
                <button type="button" id="search-x" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="inputSearch">Search...</label>
                        <input type="text" class="form-control" id="input">
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button id="searchBtn" type="button" class="btn btn-primary">Search</button>
                <button id="search-close" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>